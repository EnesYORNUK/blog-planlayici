{
  "name": "blog-planlayici",
  "version": "1.0.5",
  "description": "Blog zamanlayıcı uygulaması",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build": "electron-builder",
    "dist": "electron-builder --publish=never",
    "release": "npm version patch && git add . && git commit -m \"Release v%npm_package_version%\" && git tag v%npm_package_version% && git push origin main && git push --tags"
  },
  "keywords": [
    "blog",
    "scheduler",
    "timeline",
    "electron"
  ],
  "author": "Blog Planlayıcı",
  "license": "MIT",
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1"
  },
  "dependencies": {
    "electron-updater": "^6.6.2",
    "moment": "^2.29.4"
  },
  "build": {
    "appId": "com.blogplanlayici.app",
    "productName": "Blog Planlayıcı",
    "directories": {
      "output": "dist"
    },
    "files": [
      "**/*",
      "!node_modules/**/*",
      "!dist/**/*",
      "!.github/**/*"
    ],
    "win": {
      "target": "nsis"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    },
    "publish": {
      "provider": "github",
      "owner": "EnesYORNUK",
      "repo": "blog-planlayici",
      "releaseType": "release"
    }
  }
}
